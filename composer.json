{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "AGPLv3",
	"type": "project",
	"require": {
        "laravel/framework": "5.1.*",
        "linusu/bitcoin-address-validator": "~0",
        "pda/pheanstalk": "~3",
        "ramsey/uuid": "~2.",
        "nbobtc/bitcoind-php": "1.2.*",
        "tokenly/bitcoin-address-lib": "dev-master@dev",
        "tokenly/bitcoin-currency-lib": "^1",
        "tokenly/counterparty-asset-info-cache": "^1",
        "tokenly/bitcoin-payer": "dev-master",
        "tokenly/counterparty-sender": "dev-master",
        "tokenly/counterparty-transaction-parser": "dev-master@dev",
        "tokenly/pusher-client": "dev-master",
        "tokenly/token-generator": "dev-master@dev",
        "tokenly/xcpd-client": "dev-master@dev",
        "tokenly/laravel-event-log": "^1.1",
		"phpunit/php-timer": "1.0.*",
		"tokenly/xcaller-client": "dev-master",
		"tokenly/laravel-blocking-beanstalkd": "dev-master",
		"tokenly/consul-health-daemon": "dev-master",
		"tokenly/laravel-record-lock": "dev-master",
		"bitwasp/bitcoin": "v0.0.18",
		"tokenly/counterparty-transaction-composer": "dev-master",
		"tokenly/hmac-auth": "^1",
		"tokenly/laravel-api-provider": "^0.2",
		"guzzlehttp/guzzle": "~5"
	},
	"require-dev": {
		"phpunit/phpunit": "^4.5",
        "mockery/mockery": "~0.9",
        "satooshi/php-coveralls": "dev-master",
        "psr/log": "~1",
        "doctrine/dbal": "~2.3"

	},
	"autoload": {
        "classmap": [
            "database",
            "tests/lib/",
            "tests/TestCase.php"
        ],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		],
        "files": [
            "tests/lib/test_helpers.php"
        ]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},

    "config": {
        "preferred-install": "auto"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
